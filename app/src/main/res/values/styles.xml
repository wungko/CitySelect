<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="ToastText">
        <item name="android:layout_height">60dp</item>
        <item name="android:layout_width">60dp</item>
        <item name="android:layout_centerInParent">true</item>
        <item name="android:background">#000000</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">17sp</item>
        <item name="android:visibility">gone</item>
    </style>

    <declare-styleable name="sideBarAttrs">
        <attr name="normalBg" format="reference" />
        <attr name="touchedBg" format="reference" />
        <attr name="originalTextColor" format="color" />
        <attr name="selectedTextColor" format="color" />
        <attr name="textSize" format="dimension" />
    </declare-styleable>

    <style name="Line">
        <item name="android:background">#dfdfdf</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0.5dp</item>
    </style>
</resources>
